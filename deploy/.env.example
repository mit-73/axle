# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_USER=axle
POSTGRES_PASSWORD=axle
POSTGRES_DB=axle
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_CONTAINER_PORT=5432
POSTGRES_DSN=postgres://axle:axle@localhost:5432/axle?sslmode=disable

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PASSWORD=axle
REDIS_PORT=6379
REDIS_CONTAINER_PORT=6379
REDIS_URL=redis://:axle@localhost:6379

# ── NATS ──────────────────────────────────────────────────────────────────────
NATS_HOST=nats
NATS_PORT=4222
NATS_MONITOR_PORT=8222
NATS_CONTAINER_PORT=4222
NATS_MONITOR_CONTAINER_PORT=8222
NATS_URL=nats://localhost:4222

# ── MinIO ─────────────────────────────────────────────────────────────────────
MINIO_HOST=minio
