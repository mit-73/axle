root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[Makefile]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{js,jsx,mjs,mts,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 2
quote_type = single

[*.py]
charset = utf-8
indent_style = space
indent_size = 4